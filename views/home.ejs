<html>
    <head>
        <title>
            <%= title %>
        </title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <link href='https://fonts.googleapis.com/css?family=ABeeZee' rel='stylesheet'>
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
        <link rel="stylesheet" href="/css/home.css">
    </head>
    <body>
        <div>
            <div class="main">
                <h1 class="title line">
                    TODO App
                </h1>
                <label for="description" class="headings">Description</label><br>
                <form action="/create-task" method="POST" class="form">
                <input type="text" name="description" class="desc line" placeholder="What do you need to do?">
                <div class="arrange">
                <div class="form-group cat">
                    <label for="sel1" class="headings">Category</label>
                    <select class="form-control" id="sel1" name="category">
                      <option>Choose a category</option>
                      <option>Personal</option>
                      <option>Work</option>
                      <option>School</option>
                      <option>Cleaning</option>
                      <option>Other</option>
                    </select>
                </div>
                <div class="cat line-left cat1">
                    <label for="date-label" class="headings">Due Date</label><br>
                    <input type="date" id="birthday" name="date">
                </div>
                </div>
                <div class="arrange1">
                <button type="submit" class="btn add"><i class="fas fa-plus"></i>Add Task</button>
                </form>
                <button type="submit" class="btn del" form="delete1"><i class="fas fa-trash-alt"></i>Delete Tasks</button>
                </div>
                <form id="delete1" action="/delete-todo" method="POST" >
                <div class="elements">
                    <% for(let i of task_list){ %>
                        <div>
                            <div class="task-list line">
                            <div class="task-elements">
                                <input type="checkbox" name=task value="<%= i._id %>">
                            </div>
                            <div class="task-elements">
                                <span><%= i.description %></span>
                                <br>
                                <span class="date"><i class="far fa-calendar-alt rt-margin"></i><%= i.date %></span>
                            </div>
                            <div class="task-elements cat-tag">
                                <span><%= i.category %></span>
                            </div>
                            </div>
                        </div>
                    <% } %>
                </div>
                </form>
            </div>
        </div>
        <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
        <script src="js/select.js"></script>
    </body>
</html>